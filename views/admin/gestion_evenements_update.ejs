<%- include("../partials/header") -%>
<%- include("../partials/admin") -%>

<div>
    <%if (typeof errors_sql !== "undefined") {%>
    <%errors_sql.forEach(error => {%>
        <p><%= error%></p>
    <%})%>
    <%} %>
</div>

<div class="container-fluid w-100 backend_container" id="section3">
    <h2>Modifier un évènement</h2>


    <div id="newEvent_form" class="backend_form">

        <form  action="/request/update_event" method="post">

            <div>
                <input type="hidden" name="event_id" value="<%=one_event.id%>">

                <p>
                    <input class="form-control backend_input" type="text" placeholder="Nom de l'évènement" name="name" alt="Le nom de l'évènement" maxlength="255" value="<%=one_event.name%>" required>
                </p>

                <p>
                    <textarea class="form-control backend_input" name="description"  placeholder="Description de l'évènement" required><%=one_event.description%></textarea>
                </p>

                <p>
                    <input class="form-control backend_input" type="text" name="city" placeholder="Ville de l'évènement" alt="Ville de l'évènement" maxlength="255" value="<%=one_event.city%>" required>
                </p>

                <p>
                    <input class="form-control backend_input" type="text" name="location"  placeholder="Lieu de l'évènement" alt="Lieu de l'évènement" value="<%=one_event.location%>" maxlength="255" required>
                </p>

                <p>
                    <input class="form-control backend_input" type="date" name="date_event" value="<%=one_event.date_event%>" required>
                </p>

                <p>
                    <input class="form-control backend_input" type="text" name="poster"  placeholder="Affiche de l'évènement" value="<%=one_event.poster%>"required>
                </p>

                <p>
                    <select class="form-control backend_input" name="link_map" id="link_map-select" required>
                        <option value="">--Une carte doit-elle apparaitre ? --</option>
                        <option value="true">Oui</option>
                        <option value="false">Non</option>

                    </select>
                </p>

                <p>
                    <input type="submit" class="btn btn-light btn-lg mb-3 mt-5 backend_button">
                </p>
            </div>



        </form>

    </div>

    </div>



<%- include("../partials/footer") -%>



